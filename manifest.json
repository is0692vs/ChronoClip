{
  "manifest_version": 3,
  "name": "ChronoClip",
  "version": "0.1.0",
  "description": "ウェブサイト上の日付情報を検出し、Googleカレンダーに簡単に追加できるようにする拡張機能です。",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/regex-patterns.js",
        "lib/date-utils.js",
        "lib/chrono.min.js",
        "content/content-script.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}