{
  "manifest_version": 3,
  "name": "ChronoClip",
  "version": "0.1.0",
  "description": "ウェブサイト上の日付情報を検出し、Googleカレンダーに簡単に追加できるようにする拡張機能です。",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "notifications",
    "contextMenus"
  ],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLOUD_OAUTH_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events",
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "config/constants.js",
        "config/site-patterns.js",
        "src/shared/logger.js",
        "src/shared/error-handler.js",
        "src/shared/settings.js",
        "src/shared/site-rule-manager.js",
        "src/shared/extractors/base-extractor.js",
        "src/shared/extractors/eventbrite-extractor.js",
        "src/shared/extractors/amazon-extractor.js",
        "src/shared/extractors/tokyo-dome-hall-extractor.js",
        "src/shared/extractors/stardom-detail-extractor.js",
        "src/shared/extractors/stardom-month-extractor.js",
        "src/shared/extractors/general-extractor.js",
        "src/shared/extractors/extractor-factory.js",
        "src/shared/regex-patterns.js",
        "src/shared/date-utils.js",
        "src/shared/date-parser.js",
        "src/shared/chrono.min.js",
        "src/content/event-detector.js",
        "src/content/extractor-api.js",
        "src/content/extractor.js",
        "src/content/selection.js",
        "src/content/content-script.js"
      ],
      "css": ["src/content/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/quick-add-popup.html",
        "src/ui/quick-add-popup.css",
        "tests/settings-integration-test.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/ui/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    }
  },
  "options_ui": {
    "page": "src/ui/options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  }
}
